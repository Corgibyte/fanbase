@model Fanbase.Models.Actor

<h4>Add a new actor</h4>

@using (Html.BeginForm())
{

  @Html.LabelFor(model => model.Name, new{ required = "required" })
  @Html.TextBoxFor(model => model.Name, new{ required = "required" })

  @Html.LabelFor(model => model.DateOfBirth)
  @Html.TextBoxFor(model => model.DateOfBirth, "{0:yyyy-MM-dd}")

  @Html.Label("Country of Origin")
  @Html.DropDownList("CountryId")

  @Html.LabelFor(model => model.Oscar)
  @Html.CheckBoxFor(model => model.Oscar)

  @Html.LabelFor(model => model.IsMcu)
  @Html.CheckBox("IsMcu")

  <input type="submit" value="Add new actor" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>