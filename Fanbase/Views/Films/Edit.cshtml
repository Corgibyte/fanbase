@model Fanbase.Models.Film

<h4>Edit this film: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FilmId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.DateOfRelease)
  @Html.TextBoxFor(model => model.DateOfRelease, "{0:d MMM yyyy}", new {@type="date"})

  @Html.LabelFor(model => model.Director)
  @Html.TextBoxFor(model => model.Director)
  
  @Html.LabelFor(model => model.IsOriginalWork)
  @Html.CheckBox("IsOriginalWork")
  
  @Html.Label("Select country")
  @Html.DropDownList("CountryId")

  <button class="btn" type="submit">edit course</button>
}